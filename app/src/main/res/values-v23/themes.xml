<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.KTKwidget" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_500</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/white</item>
        <item name="cardBackgroundColor">@color/card_day</item>
        <item name="textAppearanceBody1">@color/black</item>
        <item name="android:fontFamily">@font/manrope_bold</item>

        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="ThemeOverlay.KTKwidget.AppWidgetContainer" parent="">
        <item name="appWidgetBackgroundColor">@color/light_widget</item>
        <item name="appWidgetTextColor">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorAccent">@color/blue_500</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="textColorAlertDialogListItem">@color/black</item>
    </style>

</resources>